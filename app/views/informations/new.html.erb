<h1>Formulaire</h1>
<%= form_with model: @information do |form| %>
    <div>
    <%= form.radio_button :type, 'Entreprise' %>entreprise<br />
    <%= form.radio_button :type, 'Particulier' %>particulier<br />
    </div>
    <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :numero %><br>
    <%= form.text_field :numero%>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Envoyer" %>
  </div>
<% end %>