<h1>Devis</h1>

<div>
<%= form_with model: @renseignement  do |form| %>
    <div>
    <%= form.radio_button :entreprise, 'Entreprise' %>entreprise<br />
    <%= form.radio_button :particulier, 'Particulier' %>particulier<br />
    </div>
    <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :numero %><br>
    <%= form.telephone_field :numero%>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "70x5" %>
  </div>

  <div>
    <%= form.submit "Envoyer" %>
  </div>
<% end %>
</div>